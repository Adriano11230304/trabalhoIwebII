<%- include('./components/header.ejs')%>

    <div class="container">
        <br />
        <%if(posts.length==0){%>
            <h3>Nenhum Post adicionado!</h3>
            <%}else{%>
                <%for(let i=0; i < posts.length; i++){%>
                    <br/>
                    <h6><%=date[i]%></h6>
                    <hr class="border border-primary border-2 opacity-50">
                    <h3><%=posts[i].title%></h3>
                    <br />
                    <h4><%=posts[i].description%></h4>
                    <a class="btn btn-outline-primary" href="/posts/update/<%=posts.id%>">Alterar</a>
                    <a class="btn btn-outline-danger" href="/posts/delete/<%=posts.id%>">Excluir</a>
                    <br/>
                <%}%>
            <%}%>
            <br />
            <br />
            <a class="btn btn-outline-success" href="/posts/add-post">Adicionar um novo Post</a>
    </div>

    <%- include('./components/footer.ejs')%>