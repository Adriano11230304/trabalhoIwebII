<%- include('./components/header.ejs')%>

    <div class="container">
        <%if(posts.length==0){%>
            <h3>Nenhum Post adicionado!</h3>
            <%}else{%>
                <%for(let i=0; i < posts.length; i++){%>
                    <hr class="border border-primary border-2 opacity-50">
                    <h6><%=date[i]%></h6>
                    <hr class="border border-primary border-2 opacity-50">
                    <div>
                    <h3><%=posts[i].title%></h3>
                        <%for(let j=0; j < images.length; j++){%>
                            <%if(images[j].posts_id==posts[i].id){%>
                                <div class="float-right m-1">
                                    <img src="<%=images[j].url%>" width="250" height="250" />
                                </div>
                            <%}%>
                        <%}%>
                        
                        <p class="text-justify">
                            <%=posts[i].description%>
                        </p>
                    </div>
                    <div>
                    <a class="btn btn-outline-primary" href="/posts/update/<%=posts[i].id%>">Alterar Post</a>
                    <a class="btn btn-outline-danger" href="/posts/delete/<%=posts[i].id%>">Excluir Post</a>
                    <a class="btn btn-o utline-primary" href="/posts/posts/<%=posts[i].id%>">Visualizar Post</a>
                    <a class="btn btn-outline-primary" href="/posts/images/add/<%=posts[i].id%>">Inserir Imagens no Post</a>
                    </div>
                <%}%>
            <%}%>
            <br />
            <a class="btn btn-outline-success" href="/posts/add-post">Adicionar um novo Post</a>
    </div>

    <%- include('./components/footer.ejs')%>