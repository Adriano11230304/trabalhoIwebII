<%- include('./components/header.ejs')%>

<div class="container">
    <%if(posts.length == 0){%>
        <h3>Nenhum Post adicionado!</h3>
    <%}else{%>
        <%for(let i = 0; i < posts.length; i++){%>
            <%if(i < 6){%>
                <hr class="border border-primary border-2 opacity-50">
                <h6><%=date[i]%></h6>
                <hr class="border border-primary border-2 opacity-50">
                <h3><%=posts[i].title%></h3>
                <div>
                
                <%for(let j = 0; j < images.length; j++){%>
                    <%if(images[j].posts_id == posts[i].id && d == 0){%>
                        <div style="float: right;" class="m-2">
                            <img src="<%=images[j].url%>" width="300" height="250" />
                        </div>
                        <%d++%>
                    <%}%>
                <%}%>
                <p class="text-justify">
                    <%=posts[i].description%>
                </p>
                </div>
                <div>
                <a class="btn btn-outline-primary" href="/posts/update/<%=posts[i].id%>">Alterar</a>
                <a class="btn btn-outline-danger" href="/posts/delete/<%=posts[i].id%>">Excluir</a>
                <a class="btn btn-outline-primary" href="/posts/images/<%=posts[i].id%>">Inserir Imagens no Post</a>
                <a class="btn btn-outline-primary" href="/posts/images/<%=posts[i].id%>">Alterar Imagens do Post</a>
                </div>
            <%}%>
        <%}%>
    <%}%>
    <br/>
    <a class="btn btn-outline-success m-2" href="/posts/add-post">Adicionar um novo Post</a>
</div>
<p class="text-lg-right m-3">Sistema Desenvolvido por Adriano Alvarenga Pereira</p>

<%- include('./components/footer.ejs')%>